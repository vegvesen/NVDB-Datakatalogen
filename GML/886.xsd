                        <sc:taggedValue tag="NVDB_ID">10704</sc:taggedValue>
                        <sc:taggedValue tag="NVDB_navn">Retning</sc:taggedValue>
                     </appinfo>
                  </annotation>
               </element>
               <element name="nivå" type="nvdb:NivåOmkjøringsruteType">
